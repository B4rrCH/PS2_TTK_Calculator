<Window x:Class="PS2_TTK_calculator.WindowWeaponSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PS2_TTK_calculator"
        mc:Ignorable="d"
        Title="WeaponSearchWindow" Height="550.988" Width="800">
    <Grid>
        <ListView Name="lvWeaponList" Margin="10,38,10,35" SelectionMode="Single" SelectedIndex="0" MouseDoubleClick="lvWeaponList_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Weapon Name" Width="667"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="txt_Search" HorizontalAlignment="Left" Height="23" Margin="61,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="721" TextChanged="txt_Search_TextChagned"/>
        <Button x:Name="btn_Select" Content="Select" HorizontalAlignment="Left" Margin="682,490,0,0" VerticalAlignment="Top" Width="100" Click="btn_Select_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Search:" VerticalAlignment="Top" Height="23" Width="46"/>

    </Grid>
</Window>
